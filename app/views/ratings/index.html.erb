<p id="notice"><%= notice %></p>

<h2>List of ratings</h2>

<p>
  Number of ratings: <%= @ratings.count %>
</p>

<ul>
  <% @ratings.each do |rating| %>
    <li> <%= rating.to_s %> <%= link_to current_user.username, user_path(current_user) %> </li>
  <% end %>
</ul>

<%= link_to 'New', new_rating_path %>