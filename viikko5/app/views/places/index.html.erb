<h1>Beer places search</h1>

<p id="notice"><%= notice %></p>

<%= form_tag places_path do %>
    city <%= text_field_tag :city, params[:city] %>
    <%= submit_tag "Search" %>
<% end %>

<% if @places %>
    <table>
      <thead>
        <% Place.rendered_fields.each do |f| %>
            <td><%= f %></td>
        <% end %>
      </thead>
      <% @places.each_with_index do | place, ind | %>
        <tr>
          <% Place.rendered_fields.each_with_index do | f, index | %>
            <% if index == 1 %>
                <td><%= link_to place.send(f), "places/#{@places[ind].id}" %></td>
            <% else %>
                <td><%= place.send(f) %></td>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </table>
<% end %>