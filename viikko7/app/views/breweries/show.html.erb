<p id="notice"><%= notice %></p>

<% cache @brewery do %>

<h2><%= @brewery.name %>
    <% if not @brewery.active %>
        <span class="label label-info">retired</span>
    <% end %>
</h2>

<em>
  established in
  <%= @brewery.year %>
</em>

<p> Number of beers
  <%= @brewery.beers.count %>
</p>

<ul>
 <% @brewery.beers.each do |brewery| %>
  <li>
    <%= link_to brewery.name, brewery %>
  </li>
 <% end %>
</ul>

<% if @brewery.ratings.empty? %>
  beers of the brewery has not yet been rated!
<% else %>
  Has <%= pluralize(@brewery.ratings.count, 'rating') %>, average <%= @brewery.average_rating %>
<% end %>

<% end %>

<br>

<%= link_to "change activity", toggle_activity_brewery_path(@brewery.id), method: :post, class: "btn btn-primary" %>
<%= link_to 'Edit', edit_brewery_path(@brewery) if current_user %>
